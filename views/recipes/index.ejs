<% layout('layouts/boilerplate') %>

<h1>All Recipes</h1>
<div>
    <a href="/recipes/new">Add Recipe</a>
</div>
<ul>
    <% for (let recipe of recipes) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=recipe.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=recipe.title%></h5>
                        <p class="card-text" style="margin-bottom: 0px;">
                            <%=recipe.style%> - <%=recipe.duration%> min
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Keto-Friendley: <%=recipe.keto_friendly%></small>
                        </p>
                        <a class="btn btn-primary" href="/recipes/<%=recipe._id%>">View Recipe</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</ul>
