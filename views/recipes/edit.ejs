<% layout('layouts/boilerplate') %>

<h1 class="text-center">Edit Recipe</h1>
<div class="row mt-3">
    <div class="container col-lg-9 mb-5">
        <div class="card shadow border-0">
            <div class="card-body">
                <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-12 mb-3">
                            <% recipe.images.forEach(function(img, i) { %>
                                <img src="<%=img.thumbnail%>" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                    <label class="mt-2 ml-2" for="image-<%=i%>">Delete</label>
                                </div>
                            <% }) %>
                        </div>
                        <div class="col-sm-12 input-group mb-3">
                          <div class="custom-file shadow">
                            <input type="file" class="custom-file-input" id="images" name="image" multiple>
                            <label class="custom-file-label" for="images" aria-describedby="inputGroupFileAddon02">Add More Image(s)</label>
                          </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control shadow" type="text" id="title" name="recipe[title]" value="<%=recipe.title%>" required>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <label class="form-label" for="style">Type of Cuisine</label>
                            <input class="form-control shadow" type="text" id="style" name="recipe[style]" value="<%=recipe.style%>" required>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <label class="form-label" for="duration">Cook-Time</label>
                            <input class="form-control shadow" type="text" id="duration" name="recipe[duration]" value="<%=recipe.duration%>" required>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <label class="form-label" for="keto_friendly">Keto-Friendley</label>
                            <input class="form-control shadow" type="text" id="keto_friendly" name="recipe[keto_friendly]" value="<%=recipe.keto_friendly%>" required>
                        </div>
                        <div class="col-sm-12 mb-3">
                            <label class="form-label" for="Ingredients">Ingredients</label>
                            <textarea class="form-control shadow" type="text" id="ingredients" name="recipe[ingredients]" required><%=recipe.ingredients%></textarea>
                        </div>
                        <div class="col-sm-12  mb-4">
                            <label class="form-label" for="instructions">Instructions</label>
                            <textarea class="form-control shadow" type="text" id="instructions" name="recipe[instructions]" required><%=recipe.instructions%></textarea>
                        </div>
                    </div>
                    <div class="d-flex flex-md-row flex-column align-items-center">
                        <button class="btn btn-success shadow col-md-6 col-sm-12 mb-2">Update Recipe</button>
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-primary shadow col-md-6 col-sm-12 mb-2">Back to Recipe</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



