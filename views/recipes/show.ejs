<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
          <img src="<%= recipe.image %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text"><%= recipe.style %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
          </ul>
          <div class="card-body">
            <a href="/recipes" class="btn btn-info">All Recipes</a>
            <a href="/recipes/<%=recipe._id%>/edit" class="btn btn-warning">Edit</a>
            <form class="d-inline" action="/recipes/<%=recipe._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
    </div>
</div>