<% layout('layouts/boilerplate') %>
<div class="row mt-5">
    <div class="container col-lg-5">
        <div class="card shadow border-0">
            <div class="card-body">
                <h1 class="text-center">Please Login</h1>
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control shadow" type="text" id="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control shadow" type="password" id="password" name="password" required>
                    </div>
                    <button class="btn btn-primary col-lg-12 mt-2 mb-2 shadow">Submit</button>
                    <a href="/forgot">Forgot Password</a>
                </form>
            </div>
        </div>
    </div>
</div>